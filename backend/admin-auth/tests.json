{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Login with invalid password returns 401",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Verify invalid session returns 401",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "verify",
        "session_token": "invalid_token_12345"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "valid": false
      }
    }
  ]
}
